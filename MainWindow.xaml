        <TextBox x:Name="txt_messageTwitter" HorizontalAlignment="Left" Margin="139,138,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240" Height="109" TextChanged="txt_message_TextChanged" VerticalContentAlignment="Top" d:IsHidden="True"/>
