        <TextBox x:Name="txt_phonenumber" HorizontalAlignment="Left" Margin="200,98,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180" Height="26" VerticalContentAlignment="Center" KeyDown="txt_sender_KeyDown" d:IsHidden="True"/>
