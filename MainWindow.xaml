        <TextBox x:Name="txt_messageEmail" HorizontalAlignment="Left" Margin="140,178,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240" Height="109" TextChanged="txt_message_TextChanged" VerticalContentAlignment="Top" Visibility="Hidden" d:IsHidden="True"/>
        <Label x:Name="lbl_messageEmail" Content="Message" HorizontalAlignment="Left" Margin="16,179,0,0" VerticalAlignment="Top" Width="119" Height="26" HorizontalContentAlignment="Center" FontWeight="Bold" Visibility="Hidden" d:IsHidden="True"/>
        <ComboBox x:Name="cb_prefix" HorizontalAlignment="Left" Margin="140,98,0,0" VerticalAlignment="Top" Width="60" Height="26" Visibility="Hidden" d:IsHidden="True"/>
        <TextBox x:Name="txt_sender" HorizontalAlignment="Left" Margin="305,29,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="160" Height="38"/>
        <Button x:Name="btn_create" Content="Create" HorizontalAlignment="Left" Margin="465,72,0,0" VerticalAlignment="Top" Click="btn_create_Click"/>
