        <Label x:Name="lbl_twitterID" Content="Twitter ID" HorizontalAlignment="Left" Margin="15,98,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" FontWeight="Bold" Width="120" Height="26" VerticalContentAlignment="Center" Visibility="Hidden" d:IsHidden="True"/>
